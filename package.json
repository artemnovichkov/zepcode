{
  "name": "zepcode",
  "version": "0.6.0",
  "description": "Generates Swift snippets from colors, fonts and layers.",
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec",
    "test:lint": "eslint --ext=js .",
    "test": "run-s test:**"
  },
  "husky": {
  	"hooks": {
  	  "precommit": "lint-staged"
  	}
  },
  "dependencies": {
    "zem": "^0.3.5"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2"
  },
  "repository": "http://github.com/artemnovichkov/zepcode",
  "author": {
    "name": "Artem Novichkov",
    "email": "novichkoff93@gmail.com",
    "url": "http://github.com/artemnovichkov"
  },
  "contributors": [
    {
      "name": "Pavel Baybara",
      "email": "baybara.pavel@gmail.com",
      "url": "https://github.com/baybara-pavel"
    },
    {
      "name": "Adam Swinden",
	  "email": "me@swinden.com",
	  "url": "https://github.com/AdamSwinden"
    }],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artemnovichkov/zepcode/issues"
  },
  "homepage": "https://github.com/artemnovichkov/zepcode#readme",
  "zeplin": {
    "displayName": "Zepcode",
    "projectTypes": [
      "ios"
    ],
    "repository": "http://github.com/artemnovichkov/zepcode",
    "options": [
      {
        "name": "Use color names",
        "type": "switch",
        "id": "use_color_names",
        "default": true
      },
      {
        "name": "Initializer style",
        "type": "picker",
        "id": "initializer_style",
        "default": "default",
        "options": [
        	{
        		"name": "Default",
        		"value": "default"
        	},
        	{
        		"name": "Custom",
        		"value": "custom"
        	},
        	{
                "name": "Literal",
        		"value": "literal"
        	}
        ]
      },
      {
        "name": "Use layer extension for shadows",
        "type": "switch",
        "id": "use_layer_shadow_extension",
        "default": false
      }
    ]
  }
}
